<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/job_details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inspection.JobDetailFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:clipToPadding="false"
        android:paddingBottom="88dp"
        android:scrollbars="none"
        android:layout_margin="15dp"
        android:fillViewport="true"
        android:id="@+id/detail_scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="5dp"
                card_view:contentPadding="5dp"
                android:layout_marginBottom="15dp"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rect_list_normal"
                    android:orientation="vertical">

                    <TextView
                        android:text="Job Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textSize="25sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5px"
                        android:background="@color/dividers" />


                    <TextView
                        android:text="Title :"
                        android:id="@+id/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="@color/dividers" />

                    <TextView
                        tools:text="Job 1"
                        android:id="@+id/jtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:maxLines="20"
                        android:textColor="@color/secondary"
                        android:textSize="14sp" />


                    <TextView
                        android:text="Remark :"
                        android:id="@+id/card_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textSize="20sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="@color/dividers" />

                    <TextView
                        tools:text="Need to pay first!"
                        android:id="@+id/remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:maxLines="20"
                        android:textColor="@color/secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:text="Status :"
                        android:id="@+id/card_tstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textSize="20sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="@color/dividers" />

                    <TextView
                        tools:text="Unconfirmed"
                        android:id="@+id/tstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:maxLines="20"
                        android:textColor="@color/secondary"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.22">

                            <TextView
                                android:text="Phone :"
                                android:id="@+id/card_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:textColor="@color/text"
                                android:textSize="20sp" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3px"
                                android:background="@color/dividers" />

                            <TextView
                                tools:text="67612428"
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="4dp"
                                android:maxLines="20"
                                android:textColor="@color/secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/jobdetails_image_call"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_call"
                                android:alpha="0.5"/>

                        </LinearLayout>



                    </LinearLayout>

                    <TextView
                        android:text="Name :"
                        android:id="@+id/card_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textSize="20sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="@color/dividers" />

                    <TextView
                        tools:text="Peter Chan"
                        android:id="@+id/fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:maxLines="20"
                        android:textColor="@color/secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:text="Address :"
                        android:id="@+id/card_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textSize="20sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="@color/dividers" />

                    <TextView
                        tools:text="Room 1403-5, 14\/F, Chinachem Exchange Square, 1 Hoi Wan Street, Quarry Bay"
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:maxLines="20"
                        android:textColor="@color/secondary"
                        android:textSize="14sp" />



                    <TextView
                        android:text="District :"
                        android:id="@+id/card_district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textSize="20sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="@color/dividers" />

                    <TextView
                        tools:text="Wan Chai District"
                        android:id="@+id/district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:maxLines="20"
                        android:textColor="@color/secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:text="Island :"
                        android:id="@+id/card_island"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textSize="20sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="@color/dividers" />

                    <TextView
                        tools:text="Hong Kong Island"
                        android:id="@+id/island"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:maxLines="20"
                        android:textColor="@color/secondary"
                        android:textSize="14sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="5dp"
                card_view:contentPadding="5dp"
                android:layout_marginBottom="3.5dp">




                <FrameLayout
                    android:id="@+id/map_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

                <ImageView
                    android:id="@+id/transparent_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:color/transparent" />

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>





</android.support.design.widget.CoordinatorLayout>
