<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/hidden_index"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/col1_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLength="2"
            android:inputType="number"
            android:hint=""
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="@string/frag_quotation_order_form_col1_1"/>

        <EditText
            android:inputType="text"
            android:id="@+id/col1_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLength="5"
            android:hint=""
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="@string/frag_quotation_order_form_col1_2"/>

        <EditText
            android:id="@+id/col1_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLength="2"
            android:inputType="number"
            android:hint=""
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="@string/frag_quotation_order_form_col1_3"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/del"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_remove_circle_24dp"/>
</LinearLayout>
